<% if @stock.taxes.present? %>
  <div>
  <% XStocks::Stock::Taxes::TAXES.each do |tax_code, tax_data| %>
    <% next unless @stock.taxes.include?(tax_code.to_s) %>
    <% tax_name, tax_url, tax_svg, tax_style = tax_data %>
    <div class="<%= tax_style %>">
      <%= inline_svg(tax_svg, size: '16*16') %>
      <% if tax_url %>
        <%= link_to tax_name, tax_url, class: 'no-underline', target: '_blank' if tax_url %>
      <% else %>
        <%= tax_name %>
      <% end %>
    </div>
  <% end %>
  </div>
<% end %>
