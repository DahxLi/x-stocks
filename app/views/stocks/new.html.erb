<div class="w-full max-w-md mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <h2 class="text-2xl uppercase mb-6"><%= @page_title %></h2>

  <%= form_for @stock, url: stocks_url do |form| %>
    <div class="mb-4">
      <%= form.label :symbol, class: 'block text-gray-700 font-bold mb-2' %>
      <%= form.text_field :symbol, placeholder: 'Symbol', class: 'shadow-sm appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline uppercase', autocomplete: :off, autofocus: true %>
    </div>

    <div class="pb-3 flex items-center justify-between">
      <%= link_to back_url do %>
        <%= inline_svg('svg/arrow-left.svg', size: '24*24', class: 'inline-block') %> Back
      <% end %>
      <button type="submit" class="btn btn-primary" name="save_and_show">Save & Show</button>
      <button type="submit" class="btn btn-secondary" name="save_only">Save</button>
    </div>
  <% end %>
</div>
