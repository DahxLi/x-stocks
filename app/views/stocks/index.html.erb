<table class="table table-hover">
  <thead>
    <tr>
      <th>Symbol</th>
      <th>Company</th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= link_to stock.symbol, stock_path(stock) %></td>
        <td><%= stock.company&.company_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if user_signed_in? %>
<div>
  <%= link_to 'New Stock', new_stock_path, class: 'btn btn-success' %>
</div>
<% end %>