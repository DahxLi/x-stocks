<%= form_with scope: :position, url: position_path(@position), method: :put, local: true, html: {class: 'my-form', style: 'margin-bottom: 20px;'} do |form| %>
  <% if @position.errors.any? %>
    <div class="form-group">
      <% @position.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger" role="alert">
          <%= msg %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :shares %>
    <%= form.text_field :shares, class: 'form-control', value: number_with_precision(@position.shares, delimiter: ',', strip_insignificant_zeros: true) %>
  </div>

  <div class="form-group">
    <%= form.label :average_price %>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text">$</span>
      </div>
      <%= form.text_field :average_price, class: 'form-control', value: number_to_currency(@position.average_price, unit: '') %>
    </div>
  </div>

  <div class="my-button-group">
    <%= link_to 'Cancel', '#', class: 'btn btn-outline-dark', onclick: '$("#my_position_readonly").show(); $("#my_position_writable").hide(); return false;', style: 'margin-left: 0;' %>
    <%= form.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
