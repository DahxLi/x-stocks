<% if @position.errors.any? %>
  <div class="form-group">
    <% @position.errors.full_messages.each do |msg| %>
    <div class="alert alert-danger" role="alert">
      <%= msg %>
    </div>
    <% end %>
  </div>
<% end %>

<div class="form-group">
  <%= form.label :stock %>
  <div class="input-group">
    <%= form.select(:stock_id, Stock.all.map { |p| [ "#{p.symbol} - #{p.company_name}", p.id ] }, { include_blank: true }, class: 'selectpicker form-control border rounded', data: {live_search: true}) %>
  </div>
</div>

<div class="form-group">
  <%= form.label :shares %>
  <%= form.text_field :shares, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :average_price %>
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text">$</span>
    </div>
    <%= form.text_field :average_price, class: 'form-control' %>
  </div>
</div>

<div class="my-button-group">
  <%= link_to 'Back', back_url, class: 'btn btn-outline-dark' %>
  <%= form.submit class: 'btn btn-primary' %>
</div>
