<% if @position.errors.any? %>
  <div class="form-group row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <% @position.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger" role="alert">
        <%= msg %>
      </div>
      <% end %>
    </div>
    <div class="col-sm-3"></div>
  </div>
<% end %>

<div class="form-group row">
  <div class="col-sm-5 text-xl-right text-lg-right text-md-right text-sm-right">
    <%= form.label :stock %>
  </div>
  <div class="col-sm-7">
    <%= form.select(:stock_id, Stock.all.map { |p| [ p.symbol, p.id ] }, { include_blank: true }) %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-5 text-xl-right text-lg-right text-md-right text-sm-right">
    <%= form.label :shares %>
  </div>
  <div class="col-sm-7">
    <%= form.text_field :shares %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-5 text-xl-right text-lg-right text-md-right text-sm-right">
    <%= form.label :average_price %>
  </div>
  <div class="col-sm-7">
    <%= form.text_field :average_price %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-5 text-xl-right text-lg-right text-md-right text-sm-right">
  </div>
  <div class="col-sm-7">
    <%= form.submit class: 'btn btn-primary' %>
    <%= link_to 'Back', @position.new_record? ? positions_path : position_path(@position), class: 'btn btn-link' %>
  </div>
</div>
