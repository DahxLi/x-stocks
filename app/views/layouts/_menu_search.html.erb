<form action="<%= stocks_path %>" class="top-menu-search flex flex-row relative <%= classes %>">
  <input class="shadow-sm appearance-none border-none rounded w-full py-2 px-3 h-9 text-gray-700 leading-tight focus:outline-none focus:shadow-outline bg-gray-600 focus:bg-stone-600 transition-colors"
         type="text" name="goto" placeholder="Search" aria-label="Search"
         data-hotkey="<%= hotkey %>"
         data-controller="hotkey">
  <span class="relative w-0 right-0 text-base text-gray-500 pointer-events-none">
    <%= inline_svg('svg/magnify.svg', size: '24*24', class: 'absolute right-full top-2 right-2 text-gray-300') %>
  </span>
</form>
