<div class="w-full bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <h4 class="uppercase mb-3 font-normal">Fear & Greed Index</h4>

<div id="carouselExampleControls" class="carousel slide mx-auto" data-interval="false" style="max-width: 768px; margin-bottom: 20px;">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <a href="https://money.cnn.com/data/fear-and-greed/">
        <%= image_tag('http://markets.money.cnn.com/Marketsdata/Api/Chart/FearGreedHistoricalImage?chartType=AvgPtileModel',
                      class: 'img-fluid', alt: 'Fear & Greed Over Time') %>
      </a>
    </div>
    <div class="carousel-item">
      <a href="https://money.cnn.com/data/fear-and-greed/">
        <%= image_tag('/home/fear_n_greed_image.png', class: 'img-fluid border rounded', alt: 'Fear & Greed Index') rescue 'No Image Available' %><br>
      </a>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

</div>
