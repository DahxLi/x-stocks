<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <h4 class="uppercase mb-3 font-normal">Screeners</h4>
  <nav>
    <ul class="m-0">
      <% VirtualTag.all.each do |tag| %>
        <li>
          <% url = {controller: 'stocks', action: 'index', tag: tag.name} %>
          <% url.merge!({order: tag.sort_order}) if tag.sort_order.present? %>
          <a class="block h-10 hover:no-underline py-2 text-blue-500" href="<%= url_for(url) %>" data-toggle="tooltip" data-placement="top" title="<%= tag.description %>">
            <%= inline_svg(tag.svg_image, size: '24*24', class: 'inline-block') %> <%= tag.name %>
          </a>
        </li>
      <% end %>
    </ul>
  </nav>
</div>
